---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={`Schedule | ${SITE_TITLE}`}
			description="NIAID BRC AI Codeathon 2025 Schedule - November 12-14, 2025 at Argonne National Laboratory"
		/>
		<style>
			main {
				width: 720px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
			}
			h1 {
				text-align: center;
				margin-bottom: 0.5em;
			}
			.draft-notice {
				background: #fff3cd;
				border: 1px solid #ffc107;
				border-radius: 4px;
				padding: 1em;
				margin: 2em 0;
				text-align: center;
				font-weight: bold;
			}
			.day {
				margin: 3em 0;
			}
			.day h2 {
				border-bottom: 2px solid rgb(var(--accent));
				padding-bottom: 0.5em;
			}
			.schedule-item {
				display: grid;
				grid-template-columns: 120px 1fr;
				gap: 1em;
				margin: 1em 0;
				padding: 0.75em;
			}
			.schedule-item:hover {
				background: rgba(var(--accent), 0.05);
				border-radius: 4px;
			}
			.time {
				font-weight: bold;
				color: rgb(var(--accent));
			}
			.activity {
				color: rgb(var(--gray-dark));
			}
			.activity-title {
				font-weight: bold;
				margin-bottom: 0.25em;
			}
			.activity-desc {
				font-size: 0.9em;
				color: rgb(var(--gray-dark));
			}
			.location-info {
				background: rgba(var(--accent), 0.1);
				border-left: 4px solid rgb(var(--accent));
				padding: 1em;
				margin: 2em 0;
			}
			.location-info h3 {
				margin-top: 0;
				color: rgb(var(--accent));
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<h1>Codeathon Schedule</h1>

			<div class="location-info">
				<h3>Event Location</h3>
				<p>
					<strong>Room 1416, Building 240</strong><br />
					Argonne National Laboratory<br />
					9700 S Cass Ave, Lemont, IL
				</p>
			</div>

			<div class="day">
				<h2>Day 1 - Wednesday, November 12, 2025</h2>

				<div class="schedule-item">
					<div class="time">8:30 AM</div>
					<div class="activity">
						<div class="activity-title">Check-in, Meet and Greet</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:00 AM</div>
					<div class="activity">
						<div class="activity-title">Welcome and Introductions</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:15 AM</div>
					<div class="activity">
						<div class="activity-title">Codeathon Overview and Charge</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">10:00 AM</div>
					<div class="activity">
						<div class="activity-title">Breakout Sessions</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">12:00 PM</div>
					<div class="activity">
						<div class="activity-title">Lunch Break</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">1:00 PM</div>
					<div class="activity">
						<div class="activity-title">Breakout Sessions</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">4:00 PM</div>
					<div class="activity">
						<div class="activity-title">Team Reports</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">5:00 PM</div>
					<div class="activity">
						<div class="activity-title">Adjourn</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">6:00 PM</div>
					<div class="activity">
						<div class="activity-title">Group Dinner (optional)</div>
					</div>
				</div>
			</div>

			<div class="day">
				<h2>Day 2 - Thursday, November 13, 2025</h2>

				<div class="schedule-item">
					<div class="time">8:30 AM</div>
					<div class="activity">
						<div class="activity-title">Check-in</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:00 AM</div>
					<div class="activity">
						<div class="activity-title">Recap from Day 1, Day 2 Charge</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:30 AM</div>
					<div class="activity">
						<div class="activity-title">Breakout Sessions</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">12:00 PM</div>
					<div class="activity">
						<div class="activity-title">Lunch Break</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">1:00 PM</div>
					<div class="activity">
						<div class="activity-title">Breakout Sessions</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">4:00 PM</div>
					<div class="activity">
						<div class="activity-title">Team Reports</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">5:00 PM</div>
					<div class="activity">
						<div class="activity-title">Adjourn</div>
					</div>
				</div>
			</div>

			<div class="day">
				<h2>Day 3 - Friday, November 14, 2025</h2>

				<div class="schedule-item">
					<div class="time">8:30 AM</div>
					<div class="activity">
						<div class="activity-title">Check-in</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:00 AM</div>
					<div class="activity">
						<div class="activity-title">Recap from Day 2, Day 3 Charge</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">9:30 AM</div>
					<div class="activity">
						<div class="activity-title">Breakout Sessions</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">12:00 PM</div>
					<div class="activity">
						<div class="activity-title">Lunch Break</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">1:00 PM</div>
					<div class="activity">
						<div class="activity-title">Project Presentations</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:00 PM</div>
					<div class="activity">
						<div class="activity-title">Discussion and Closeout</div>
					</div>
				</div>

				<div class="schedule-item">
					<div class="time">3:30 PM</div>
					<div class="activity">
						<div class="activity-title">Codeathon Concludes</div>
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
